{
  "info": {
    "name": "KodumunHatasi API",
    "description": "AI-Assisted Deterministic Code Review Backend API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "projectId",
      "value": "",
      "type": "string"
    },
    {
      "key": "versionId",
      "value": "",
      "type": "string"
    },
    {
      "key": "comparisonId",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "auth": { "type": "noauth" },
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Sign Up",
          "request": {
            "auth": { "type": "noauth" },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/signup",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "signup"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.data && jsonData.data.access_token) {",
                  "    pm.collectionVariables.set('token', jsonData.data.access_token);",
                  "    console.log('Token saved!');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": { "type": "noauth" },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Get Me",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Projects",
      "item": [
        {
          "name": "Create Project",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.data && jsonData.data.id) {",
                  "    pm.collectionVariables.set('projectId', jsonData.data.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Project\",\n  \"description\": \"A test project for code review\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/projects",
              "host": ["{{baseUrl}}"],
              "path": ["projects"]
            }
          }
        },
        {
          "name": "List Projects",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/projects",
              "host": ["{{baseUrl}}"],
              "path": ["projects"]
            }
          }
        },
        {
          "name": "Get Project by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/projects/{{projectId}}",
              "host": ["{{baseUrl}}"],
              "path": ["projects", "{{projectId}}"]
            }
          }
        },
        {
          "name": "Delete Project",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/projects/{{projectId}}",
              "host": ["{{baseUrl}}"],
              "path": ["projects", "{{projectId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Code Versions",
      "item": [
        {
          "name": "Upload Version (with auto-analysis)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.data && jsonData.data.id) {",
                  "    pm.collectionVariables.set('versionId', jsonData.data.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"versionLabel\": \"v1.0.0\",\n  \"sourceCode\": \"function processData(arr) {\\n  for (let i = 0; i < arr.length; i++) {\\n    for (let j = 0; j < arr.length; j++) {\\n      console.log(arr[i], arr[j]);\\n    }\\n  }\\n}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/projects/{{projectId}}/versions",
              "host": ["{{baseUrl}}"],
              "path": ["api", "projects", "{{projectId}}", "versions"]
            }
          }
        },
        {
          "name": "List Versions",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/projects/{{projectId}}/versions",
              "host": ["{{baseUrl}}"],
              "path": ["api", "projects", "{{projectId}}", "versions"]
            }
          }
        },
        {
          "name": "Get Version by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/versions/{{versionId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "versions", "{{versionId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Analysis",
      "item": [
        {
          "name": "Trigger Analysis",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sourceCode\": \"function processData(arr) {\\n  for (let i = 0; i < arr.length; i++) {\\n    console.log(arr[i]);\\n  }\\n}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/versions/{{versionId}}/analyze",
              "host": ["{{baseUrl}}"],
              "path": ["api", "versions", "{{versionId}}", "analyze"]
            }
          }
        },
        {
          "name": "Get Analysis Results",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/versions/{{versionId}}/analysis",
              "host": ["{{baseUrl}}"],
              "path": ["api", "versions", "{{versionId}}", "analysis"]
            }
          }
        }
      ]
    },
    {
      "name": "Comparison",
      "item": [
        {
          "name": "Compare Two Versions",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.data && jsonData.data.id) {",
                  "    pm.collectionVariables.set('comparisonId', jsonData.data.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fromVersionId\": \"VERSION_ID_1\",\n  \"toVersionId\": \"VERSION_ID_2\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/projects/{{projectId}}/compare",
              "host": ["{{baseUrl}}"],
              "path": ["api", "projects", "{{projectId}}", "compare"]
            }
          }
        },
        {
          "name": "Get Comparison Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/comparisons/{{comparisonId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "comparisons", "{{comparisonId}}"]
            }
          }
        },
        {
          "name": "Generate AI Explanation",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/comparisons/{{comparisonId}}/explain",
              "host": ["{{baseUrl}}"],
              "path": ["api", "comparisons", "{{comparisonId}}", "explain"]
            }
          }
        }
      ]
    }
  ]
}
